<div class="author">
    <h1 class="author__heading">Hi, I am Raddy.</h1>
    <p class="author__body">Web developer and content creator.</p>
  </div>
  
  <img src="/img/hero-image.webp" alt="person looking out through window" class="hero-image" width="981" height="528">
  
  <section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
  
    
      <% data.forEach(post => { %>
        <div class="post">
          <% if (post.image && post.image.data) { %>
            <div class="post-image">
              <img src="data:<%= post.image.contentType %>;base64, <%= post.image.data.toString('base64') %>" alt="" class="">
            </div>
          <% } %>
          <div class="post-preview">
            <h1><a href="/post/<%= post._id %>"><%= post.title %></a></h1>
            <i class='bx bxs-user'>Asizy</i>
            <i class='bx bxs-calendar'><%= post.createdAt %></i>
            <p class="preiew-text"><%= post.preview %>.</p>
            <a href="/post/<%= post._id %>" class="btn read-more">Read More</a>
          </div>
        </div>
      <% }) %>
    


      
  
  
    <% if (nextPage !== null) { %>
      <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
   
  
    
  
  
  
  </section>